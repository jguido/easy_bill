{% if form is defined %}
    <div class="col-xs-5 inline">
        <form action="{% if action == 'edit' %}{{ path('path_form_company_edit', {'id':id}) }}{% else %}{{ path('path_form_company_create') }}{% endif %}" method="post" {{ form_enctype(form) }} class="form-horizontal span8">
            {{ form_widget(form.id) }}
            {{ form_widget(form._token) }}
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.name) }}</span>
                {{ form_errors(form.name) }}
                <span class="col-xs-9">{{ form_widget(form.name) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.siren) }}</span>
                {{ form_errors(form.siren) }}
                <span class="col-xs-9">{{ form_widget(form.siren) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.activity) }}</span>
                {{ form_errors(form.activity) }}
                <span class="col-xs-9">{{ form_widget(form.activity) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.reference) }}</span>
                {{ form_errors(form.reference) }}
                <span class="col-xs-9">{{ form_widget(form.reference) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.address1) }}</span>
                {{ form_errors(form.address1) }}
                <span class="col-xs-9">{{ form_widget(form.address1) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.address2) }}</span>
                {{ form_errors(form.address2) }}
                <span class="col-xs-9">{{ form_widget(form.address2) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.bp) }}</span>
                {{ form_errors(form.bp) }}
                <span class="col-xs-9">{{ form_widget(form.bp) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.cp) }}</span>
                {{ form_errors(form.cp) }}
                <span class="col-xs-9">{{ form_widget(form.cp) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.city) }}</span>
                {{ form_errors(form.city) }}
                <span class="col-xs-9">{{ form_widget(form.city) }}</span>
            </div>
            <div class="row form-group">
                <span class="col-xs-3 inline">{{ form_label(form.country) }}</span>
                {{ form_errors(form.country) }}
                <span class="col-xs-9">{{ form_widget(form.country) }}</span>
            </div>
            <div class="row">
                <div class="col-xs-1 pull-right inline">
                    <button type="button" value="Annuler" title="Annuler" class="btn btn-info  glyphicon glyphicon-remove data-dismiss close-modal pull-right"></button>
                </div>
                <div class="col-xs-1 pull-right inline">
                    <button type="submit" value="Enregistrer" title="Enregistrer" class="btn btn-primary glyphicon glyphicon-ok pull-right"></button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-xs-6 inline">

    </div>
{% endif %}
